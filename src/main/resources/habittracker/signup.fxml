<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" styleClass="root" 
            xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.habittracker.controllers.SignupController"
            stylesheets="@signup.css"
            prefHeight="600.0" prefWidth="800.0">
    
    <center>
        <VBox fx:id="signupContainer" styleClass="signup-container" alignment="CENTER">
            
            <Label text="Sign Up" styleClass="title"/>
            
            <TextField fx:id="usernameField" 
                      styleClass="input-field" 
                      promptText="Username"/>
            
            <PasswordField fx:id="passwordField" 
                          styleClass="input-field" 
                          promptText="Password"/>
            
            <PasswordField fx:id="confirmPasswordField" 
                          styleClass="input-field" 
                          promptText="Confirm Password"/>
            
            <Button text="Sign Up" 
                   styleClass="primary-btn" 
                   onAction="#handleSignup"/>
            
            <Label fx:id="messageLabel" 
                  styleClass="message-label"
                  text=""/>
            
        </VBox>
    </center>

</BorderPane>