<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_CENTER" spacing="20" stylesheets="@homepage.css" 
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.habittracker.controllers.HomepageController">
   
   <children>
      <!-- Header with Login/Signup Buttons -->
      <HBox alignment="CENTER_RIGHT" spacing="15" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets right="50" top="30" />
         </VBox.margin>
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" styleClass="header-button" text="Login" />
            <Button fx:id="signupButton" mnemonicParsing="false" styleClass="header-button" text="Sign Up" />
         </children>
      </HBox>
      
      <!-- Main Content -->
      <VBox alignment="CENTER" spacing="40" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="80" />
         </VBox.margin>
         <children>
            <!-- Main Title -->
            <VBox alignment="CENTER" spacing="10">
               <children>
                  <Label fx:id="mainTitle" styleClass="main-title" text="Habit Tracker" />
                  <Label fx:id="tagline" styleClass="tagline" text="Build better habits, one day at a time" />
               </children>
            </VBox>
            
            <!-- Welcome Message -->
            <VBox alignment="CENTER" spacing="15" styleClass="welcome-box" maxWidth="600">
               <children>
                  <Label styleClass="welcome-title" text="Welcome" />
                  <Label styleClass="welcome-text" text="Thank you for choosing Habit Tracker! Start your journey towards better habits with our personalized tracking system. It covers everything you need - from daily progress to long-term consistency." 
                         wrapText="true" />
               </children>
            </VBox>
            
            <!-- Let's Go Button -->
            <Button fx:id="letsGoButton" mnemonicParsing="false" styleClass="lets-go-button" text="LET'S GO" />
         </children>
      </VBox>
   </children>
</VBox>