<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.habittracker.controllers.AnalyticsController"
            prefWidth="1000" prefHeight="700"
            stylesheets="@analytics.css">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <children>
                <Button text="← Back" fx:id="backBtn"/>
                <Label text="Analytics Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Range:"/>
                <ComboBox fx:id="rangeSelector" prefWidth="150">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="This Week"/>
                            <String fx:value="This Month"/>
                            <String fx:value="Last 7 Days"/>
                            <String fx:value="Last 30 Days"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <children>
                <LineChart fx:id="lineChart" prefHeight="300" prefWidth="900" animated="true">
                    <xAxis>
                        <CategoryAxis label="Date"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Completed Habits"/>
                    </yAxis>
                </LineChart>

                <PieChart fx:id="pieChart" prefHeight="300" prefWidth="600"/>
            </children>
        </VBox>
    </center>
</BorderPane>
